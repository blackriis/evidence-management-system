# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/evidence_management"

# Authentication
NEXTAUTH_SECRET="your-super-secret-jwt-secret-key-here"
NEXTAUTH_URL="https://your-domain.com"

# File Storage Configuration
STORAGE_ENDPOINT="https://your-minio-endpoint.com"
STORAGE_ACCESS_KEY="your-access-key"
STORAGE_SECRET_KEY="your-secret-key"
STORAGE_BUCKET="evidence-files"
STORAGE_REGION="us-east-1"

# Email Configuration (Optional - for notifications)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@your-domain.com"

# Line Notify Configuration (Optional - for notifications)
LINE_NOTIFY_TOKEN="your-line-notify-token"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Security Configuration
CSP_REPORT_URI="/api/security/csp-report"

# Performance Monitoring (Optional)
ENABLE_PERFORMANCE_MONITORING="true"

# Development/Production Environment
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

# Application Configuration
MAX_FILE_SIZE="5368709120"  # 5GB in bytes
CHUNK_SIZE="10485760"       # 10MB in bytes

# Backup Configuration (Optional)
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
BACKUP_RETENTION_DAYS="2555"  # 7 years

# Monitoring (Optional)
PROMETHEUS_METRICS_ENABLED="true"
LOG_LEVEL="info"