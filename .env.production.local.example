# Evidence Management System - Production Environment Variables

# Database Configuration
DATABASE_URL="postgresql://evidenceuser:your_secure_password@localhost:5432/evidence_management"

# NextAuth Configuration
NEXTAUTH_SECRET="your-32-character-secret-key-here-minimum-length"
NEXTAUTH_URL="https://your-domain.com"

# File Storage Configuration (S3 Compatible)
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_ACCESS_KEY="your_s3_access_key"
STORAGE_SECRET_KEY="your_s3_secret_key"
STORAGE_BUCKET="evidence-files"
STORAGE_REGION="us-east-1"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@your-domain.com"

# Line Notify Integration (Optional)
LINE_NOTIFY_TOKEN="your_line_notify_token"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="production"
APP_URL="https://your-domain.com"
PORT=3000
HOSTNAME="0.0.0.0"

# Security Settings
HTTPS_ENABLED=true
DISABLE_REDIS_CACHE=false

# Build Configuration (for Docker builds only)
# SKIP_ENV_VALIDATION=false